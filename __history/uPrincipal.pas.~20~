{$R *.dfm}

procedure TfrmPrincipal.ConexaoDB;
begin
  DtmConexao                           := TdtmConexao.Create( Self );
  DtmConexao.ConexaoDB.SQLHourGlass    := True;
  DtmConexao.ConexaoDB.Protocol        := 'mssql';
  DtmConexao.ConexaoDB.LibraryLocation :=
    'C:\Users\ll\OneDrive\Documentos\ProjetoComercial\ntwdblib.dll';
  DtmConexao.ConexaoDB.HostName  := '.\SERVERCURSO';
  DtmConexao.ConexaoDB.Port      := 1433;
  DtmConexao.ConexaoDB.User      := 'sa';
  Dtmconexao.ConexaoDB.Password  := 'mudar@123';
  DtmConexao.ConexaoDB.Database  := 'vendas';
  DtmConexao.ConexaoDB.Connected := True;
end;

procedure TfrmPrincipal.Fechar1Click( Sender: TObject );
begin
  Close;
end;

procedure TfrmPrincipal.FormCreate( Sender: TObject );
begin
  Self.ConexaoDB;
end;

